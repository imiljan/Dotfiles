[alias]
    d = diff
    dh = diff HEAD
    st = status
    br = branch --all
    co = checkout
    cob = checkout -b
    undo = reset --soft HEAD^
    undo-hard = reset --hard HEAD^
    l = log --oneline
    lg = log --graph --date=short --pretty=format:'%C(bold red)%h%Creset -%C(bold yellow)%d%Creset %s %C(bold green)(%cr) %C(bold blue)<%an>%Creset %C(yellow)%ad%Creset'
    lgr = log --reverse --date=short --pretty=format:'%C(bold red)%h%Creset -%C(bold yellow)%d%Creset %s %C(bold green)(%cr) %C(bold blue)<%an>%Creset %C(yellow)%ad%Creset'
    m = merge
    mnff = merge --no-ff
    patch = !git --no-pager diff --no-color
[help]
    autocorrect = 1
[core]
    editor = nvim
    autocrlf = input
    pager = diff-so-fancy | less --tabs=4 -RF
    excludesfile = /Users/imiljan/.gitignore
[push]
    autoSetupRemote = true
