[user]
    name = Miljan Ignjatovic
    email = miljan.ignjatovic.96@gmail.com
[color]
    diff = auto
    status = auto
    branch = auto
    ui = true
[alias]
    d = diff
    dh = diff HEAD
    st = status
    br = branch --all
    co = checkout
    cob = checkout -b
    undo = reset --soft HEAD^
    undo-hard = reset --hard HEAD^
    lg = log --graph --pretty=format:'%C(bold red)%h%Creset -%C(bold yellow)%d%Creset %s %C(bold green)(%cr) %C(bold blue)<%an>%Creset %C(yellow)%ad%Creset' --abbrev-commit --date=short
    lgr = log --reverse --pretty=format:'%C(bold red)%h%Creset -%C(bold yellow)%d%Creset %s %C(bold green)(%cr) %C(bold blue)<%an>%Creset %C(yellow)%ad%Creset' --abbrev-commit --date=short
    lgn = log --pretty=oneline --abbrev-commit --show-notes=*
    mnff = merge --no-ff
[credential]
    helper = cache --timeout 28800
[help]
    autocorrect = 1
[core]
    editor = nvim
    autocrlf = input
    pager = diff-so-fancy | less --tabs=4 -RFX
[push]
    autoSetupRemote = true
[interactive]
    diffFilter = diff-so-fancy --patch
[color "diff-highlight"]
    oldNormal = red bold
    oldHighlight = red bold 52
    newNormal = green bold
    newHighlight = green bold 22
[color "diff"]
    meta = 11
    frag = magenta bold
    func = 146 bold
    commit = yellow bold
    old = red bold
    new = green bold
    whitespace = red reverse

